{
  "name": "good-books",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-scripts": "1.1.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "lint": "lynt src/**/*.js src/*.js  --react --ignore src/tests/**/*.*",
    "precommit": "yarn lint-staged && yarn lint"
  },
  "devDependencies": {
    "husky": "^0.14.3",
    "lint-staged": "^7.2.0",
    "lynt": "^0.5.2",
    "prettier": "^1.14.0"
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "prettier --config .prettierrc --write",
      "git add"
    ]
  }
}
